<h1>ユーザー一覧</h1>
<table>
  <thead>
    <th>ユーザーID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td>
        <%= link_to admin_user_path(user.id) do %>
          <%= user.name %>
        <% end %>
      </td>
      <td><%= user.email %></td>
      <td>
        <% if user.user_status %>
          退会
        <% else %>
          有効
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>