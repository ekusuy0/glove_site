<%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
  <p>ユーザーID</p>
  <%= @user.id %><br>
  <%= f.label :name, "氏名" %>
  <%= f.text_field :name %><br>
  <%= f.label :zip_code, "郵便番号" %>
  <%= f.text_field :zip_code %><br>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %><br>
  <%= f.label :phone_number, "電話番号" %>
  <%= f.text_field :phone_number %><br>
  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email %><br>
  <p>ユーザーステータス</p>
  <%= f.radio_button :user_status, false %>
  <%= f.label :user_status, "有効",:value => false %>
  <%= f.radio_button :user_status, true %>
  <%= f.label :user_status, "退会", :value => true %><br>
  <%= f.submit '変更を保存', class: "btn btn-primary" %>
<% end %>