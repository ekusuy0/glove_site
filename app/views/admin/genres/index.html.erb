<h1>ジャンル作成画面</h1>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name %>
  <%= f.submit "作成" %>
<% end %>

<% @genres.each do |genre| %>
  <%= genre.name %>
  <%= link_to '編集', edit_admin_genre_path(genre.id) %><br>
<% end %>