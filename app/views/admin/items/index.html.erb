<% @items.each do |item| %>
  <p>商品画像</p>
  <%= image_tag item.item_image, size: "200x200" %>
  <p>商品名</p>
  <%= item.name %>
  <p>商品説明</p>
  <%= item.description %>
  <p>値段(税抜き)</p>
  <%= item.price %><br>
  <%= link_to '詳細', admin_item_path(item.id) %>
  <%= link_to '編集', edit_admin_item_path(item.id) %>
<% end %>